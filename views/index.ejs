<section class="vh-100 vw-100 gradient-custom">

    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-start">
        <div class="col col-xl-10">
  
          <div class="card">
            <div class="card-body p-5">
   
              <form class="d-flex justify-content-center align-items-center mb-4" action="/habbits/create" method="post">
                <div class="form-outline d-flex flex-row justify-content-around w-100">
                  <input type="text" name="name" class="form-control inp1" placeholder="Add a new habbit" autocomplete="off"/>
                  <input type="time" id="appt" name="time" class="form-control inp2"  placeholder="Time">
                  <input type="number" name="goal" class="form-control inp3" placeholder="Weekly goal" max="7" autocomplete="off"/>
                </div>
                <button type="submit" class="btn btn-info ms-2">Add</button>
              </form>
  
              <!-- Tabs navs -->
              <ul class="nav nav-tabs mb-4 pb-2" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                  <a class="nav-link active" id="ex1-tab-1" data-toggle="tab" href="#ex1-tabs-1"  role="tab" aria-controls="ex1-tabs-1" aria-selected="true">Detail View</a>
                </li>
                <li class="nav-item" role="presentation">
                  <a class="nav-link" id="ex1-tab-2" data-toggle="tab" href="#ex1-tabs-2" role="tab" aria-controls="ex1-tabs-2" aria-selected="false">Weekly View</a>
                </li>
              </ul>
              <!-- Tabs navs -->


              <!-- <li class="nav-item" role="presentation">
                <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="#ex1-tabs-1" role="tab"
                  aria-controls="ex1-tabs-1" aria-selected="true">All</a>
              </li> -->


              <!-- Tabs content -->
              <div class="tab-content" id="ex1-content">
                <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel"
                  aria-labelledby="ex1-tab-1">
                  <ul class="list-group mb-0">
                    <%for(i of habbits){%>
                      <li class="list-group-item d-flex align-items-center justify-content-between border-0 mb-2 rounded"
                        style="background-color: #f4f6f7;">
                        <div class="w-40 d-flex justify-content-between m-3" >
                          <span class="mx-3 h5"><%=habbits.indexOf(i)+1%>.</span>
                          <span class="h5"><%=i.title%></span>
                        </div>
                        <span>Execute Time: <%=i.time%></span>
                        <span><span>Streak: </span><span class="statCount">0</span>/<%=i.goal%></span>
                        <a href="habbits/destroy?id=<%=i.id%>"><img src="https://cdn-icons-png.flaticon.com/128/10147/10147931.png" height="20px" width="20px" alt=""></a>

                      </li>
                    <%}%>

                  </ul>
                </div>
                <div class="tab-pane" id="ex1-tabs-2" role="tabpanel" aria-labelledby="ex1-tab-2">

                  <div class="wrapper">
                    <header>
                      <p class="current-date"></p>
                      <div class="icons">
                        <span id="prev" class="material-symbols-rounded">chevron_left</span>
                        <span id="next" class="material-symbols-rounded">chevron_right</span>
                      </div>
                    </header>
                    <div class="calendar">
                      <ul class="weeks">
                        <li>Sun</li>
                        <li>Mon</li>
                        <li>Tue</li>
                        <li>Wed</li>
                        <li>Thu</li>
                        <li>Fri</li>
                        <li>Sat</li>
                      </ul>
                      <%for(i=0;i< habbits.length;i++){%>
                        <hr>
                        <div class="habbit-div" id="<%=i%>" data_id="<%=habbits[i].id%>">
                          <div class="w-100 d-flex justify-content-between" >
                            <h5 class="hb_title"><%=habbits[i].title%></h5>
                            <a href="habbits/destroy?id=<%=habbits[i].id%>">
                                <img src="https://cdn-icons-png.flaticon.com/128/6861/6861362.png" height="15px" width="15px" alt="delete-btn">
                              </a>
                          </div>
                          <ul class="days" ></ul>
                        </div>
                      <%}%>

                    </div>
                  </div>
                </div>
              </div>
              <!-- Tabs content -->
  
            </div>
          </div>
  
        </div>
      </div>
    </div>
  </section>

  <script src="/js/script.js "></script>

